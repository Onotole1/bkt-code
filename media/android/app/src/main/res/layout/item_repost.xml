<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="16dp">
    <ImageView
            android:id="@+id/avatarIv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_avatar_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_avatar_48dp"
            />
    <TextView
            android:id="@+id/createdTv"
            tools:text="5 минут назад"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/avatarIv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="10sp"
            android:textColor="#999999"/>
    <TextView
            android:id="@+id/authorTv"
            tools:text="Netology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/avatarIv"
            app:layout_constraintTop_toBottomOf="@id/createdTv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"/>
    <TextView
            android:id="@+id/contentTv"
            tools:text="First post in our network!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/avatarIv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"/>
    <ImageView
        android:id="@+id/repostImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/sourceCl"
        app:layout_constraintBottom_toBottomOf="@id/sourceCl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_reposts_active"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sourceCl"
        android:layout_width="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="@drawable/rectangle_border"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contentTv"
        app:layout_constraintStart_toEndOf="@id/repostImg"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/sourceAvatarIv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_avatar_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_avatar_48dp"
            />
        <TextView
            android:id="@+id/sourceCreatedTv"
            tools:text="5 минут назад"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/sourceAvatarIv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="10sp"
            android:textColor="#999999"/>
        <TextView
            android:id="@+id/sourceAuthorTv"
            tools:text="Netology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/sourceAvatarIv"
            app:layout_constraintTop_toBottomOf="@id/sourceCreatedTv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/sourceContentTv"
            tools:text="First post in our network!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/sourceAuthorTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
            android:id="@+id/likeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_favorite_inactive_24dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/likesTv"
            app:layout_constraintTop_toBottomOf="@+id/sourceCl"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:id="@+id/likesTv"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toStartOf="@id/shareBtn"
            app:layout_constraintTop_toBottomOf="@+id/sourceCl"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="#ff0000"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_share_24dp"
            android:id="@+id/shareBtn"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toStartOf="@+id/shareTv"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sourceCl"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    <TextView
            android:id="@+id/shareTv"
            tools:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sourceCl"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
